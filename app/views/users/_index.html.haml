.users.index

  %table
    %tr
      %th= "Name"
      %th= "Email"
      %th= "Identity"
      %th.role= "Role"

    - @users.each do |user|
      %tr
        %td= user.name
        %td= link_to user.email, edit_user_url(user), 'data-dialog' => true, 'data-title' => "Edit user details"
        %td= user.identity_url
        %td
          = user.role_name
        %td
          - if user != current_user
            .form
              - form_for user, :html => {:method => :delete} do |f|
                %button.negative.small{:type => 'submit', 'data-confirm' => "Are you sure you want to destroy this user?"}= "X"
            

